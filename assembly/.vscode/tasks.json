{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Assembly",
            "command": "docker-compose up",
            "type": "shell",
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build CLI",
            "type": "shell",
            "group": "build",
            "command": "dotnet build ..\\MMR.CLI\\MMR.CLI.csproj -c ${input:configuration}",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Run CLI",
            "type": "shell",
            "group": "build",
            "command": "dotnet \"..\\MMR.CLI\\bin\\${input:configuration}\\netcoreapp3.1\\MMR.CLI.dll\" -input \"input\\Rom.z64\" -settings \"..\\MMR.UI\\bin\\${input:configuration}\\settings.json\"",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build All",
            "type": "shell",
            "group": "build",
            "dependsOn": ["Build Assembly", "Build CLI", "Run CLI"],
            "dependsOrder": "sequence",
            "problemMatcher": "$msCompile"
        }
    ],
    "inputs": [
        {
            "id": "configuration",
            "description": "Build Configuration",
            "default": "Debug",
            "type": "pickString",
            "options": ["Debug", "Release"]
        }
    ]
}